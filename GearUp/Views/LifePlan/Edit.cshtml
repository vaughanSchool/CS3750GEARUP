@model IEnumerable<GearUp.Models.Student>
@{
    ViewBag.Title = "LifePlan Edit";        
}

@* This is where the styling for this page is located. Look in Content folder for lifeplan-edit.css *@
<link href="~/Content/lifeplan-edit.css" rel="stylesheet" />

@* This is the container wrapped around our whole edit area *@
<div class="container">

    @* Start of the Top Section (Search Bar and Advisor drop down) *@
    <div id="top-section" class="row">
        <div class="col-md-6">
            @using (@Html.BeginForm())
            {
                <b>Student Name: </b>
                @Html.TextBox("searchTerm", null, new { id = "txtStudentSearch", @class = "form-control" })
                <input class="btn btn-primary" type="submit" value="Search" />
            }﻿
        </div>
        <div class="col-md-6">
            Advisor Drop Down Goes Here...
        </div>
    </div>
    @* End of top section*@   
     
    <div class="row">

        @* Start of the Left Section (All of the input boxes, buttons, etc...) *@
        <div id="left-section" class="col-md-4">
            <div>
                
                @using (@Html.BeginForm())
                {

                    @Html.Label("Academic Needs:") <br />
                    @Html.TextBox("AcademicNeeds")
                    <button type="submit">Enter</button>
                    <button type="reset">Clear</button>
                }             
                

            </div>
            <div id="educational-goals">
                @using (@Html.BeginForm())
                {

                    @Html.Label("Educational Goals:") <br />
                    @Html.TextBox("EducationalGoals")
                    <button type="submit">Enter</button>
                    <button type="reset">Clear</button>
                }
            </div>
            <div id="career-goals">
                @using (@Html.BeginForm())
                {

                    @Html.Label("Career Goals:") <br />
                    @Html.TextBox("CareerGoals")
                    
                        
                            <select id="CategoryType" name="CategoryType">
                                <option value=""></option>
                                <option selected="selected" value="0">Animal Science</option>
                                <option value="1">Auto/Aircraft Mechanics</option>
                                <option value="2">Business</option>
                                <option value="3">Communications</option>
                                <option value="4">Computers</option>
                                <option value="5">Construction</option>
                                <option value="6">Cosmetology</option>
                                <option value="7">Criminal Justice</option>
                                <option value="8">Culinary</option>
                                <option value="9">Education</option>
                                <option value="10">Engineering</option>
                                <option value="11">Entertainment</option>
                                <option value="12">Entrepreneurship</option>
                                <option value="13">Humanities</option>
                                <option value="14">Interior Design</option>
                                <option value="15">Medical/Dental</option>
                                <option value="16">Military</option>
                                <option value="17">Social Work/Psychology</option>
                                <option value="18">Visual/Performing Arts</option>
                                <option value="19">Other</option>
                            </select>
                        
                           
                        
                        <div id="buttons">
                            <button type="submit">Enter</button><br />
                            <div id="clear">
                                <button type="reset">Clear</button>
                            </div>
                        </div>
                            

                }
            </div>
            <div>
                <button class="btn btn-default">Cancel</button>
                <butoon class="btn btn-primary">Submit</butoon>
            </div>
        </div>
        @* End of left section *@

        @* Start of the right section (Where the boxes to display info are located) *@
        <div id="right-section" class="col-md-8">
            <div>
                Academic Needs Stuff Goes Here...
            </div>
            <div>
                Educational Goals Stuff Goes Here...
            </div>
            <div>
                Career Goals Stuff Goes Here...
            </div>            
        </div>
        @* End of right section *@

    </div>


</div>
@* End of container *@